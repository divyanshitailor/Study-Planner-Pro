    def clear_content(self):
        for widget in self.content_area.winfo_children():
            widget.destroy()

    def splash_screen(self):
        self.clear_content()
        splash_frame = ctk.CTkFrame(self.content_area)
        splash_frame.pack(expand=True, fill="both")
        
